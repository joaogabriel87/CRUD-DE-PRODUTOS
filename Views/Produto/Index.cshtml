<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]Produtos</title>
    @model IEnumerable<ProdutoModel>
</head>
<body>
    <div class="container">


<div class="d-flex justify-content-between align-items-center mb-5">
<h1>Produtos</h1>
<a button type="button" class="btn btn-success" asp-controller="Produto" asp-action="Cadastrar"><i class="bi bi-file-plus mx-2"></i>Cadastrar um novo produto</a>
</div>

<table id="Produto" class="table table-light table-hover mt-5">
  <thead>
    <tr>
      <th scope="col">Produto</th>
      <th scope="col">Nome</th>
      <th scope="col">Tipo</th>
      <th scope="col">Pre√ßo</th>
      <th scope="col">Data de Cadastro</th>
      
    </tr>
  </thead>
  <tbody>
    @if (Model != null)
    {
        @foreach (var produto  in Model )
        {
    <tr>
      <th scope="row">@produto.Id</th>
      <td>@produto.Nome</td>
      <td>@produto.Tipo</td>
      <td>@produto.Preco</td>
      <td>@produto.dataCadastro</td>
      <td>
        <a asp-controller="Produto" asp-action="Editar" asp-route-id="@produto.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil mx-2"></i>Editar</a>
        <a asp-controller="Produto" asp-action="Deletar" asp-route-id="@produto.Id" class="btn btn-danger mx-2"><i class="bi bi-trash mx-2"></i>Excluir</a>
      </td>
    </tr>
    
        }
    }
  </tbody>
</table>

</div>
</body>
</html>